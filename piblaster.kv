#:kivy 1.9.0

<ConnectButton>:
    cb_image: cb_image_id
    
    Image:
        source: "icons/disconnected.png"
        center: root.center
        size: self.size
        id: cb_image_id

<MultiButton>:
    mb_image: mb_image_id

    Image:
        source: "icons/play.png"
        center: root.center
        size: self.size
        id: mb_image_id


<Piblaster>:

    connect_btn: connect_btn_id
    multi_btn: multi_btn_id
    music_list: music_list_id

    BoxLayout:
        orientation: 'vertical'
        width: root.width
        height: root.height
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1

            ConnectButton:
                size_hint: None, 1
                width: 256
                on_release: root.connect()
                id: connect_btn_id

            Label:
                text: 'Piblaster'
                size_hint: 1, 1

            MultiButton:
                size_hint: None, 1
                width: 256
                on_release: root.play()
                id: multi_btn_id


        MusicList:
            size_hint: 1, 0.9
            id: music_list_id

