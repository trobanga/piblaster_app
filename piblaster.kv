<ConnectButton>:
    image_id: image
    
    Image:
        source: "icons/disconnected.png"
        center: root.center
        size: self.size
        id: image
        
<Piblaster>:

    connect_btn_id: connect_btn
    ml_id: ml
    
    BoxLayout:
        orientation: 'vertical'
        width: root.width
        height: root.height
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1

            ConnectButton:
                size_hint: None, 1
                width: 256
                on_release: root.connect()
                id: connect_btn

            Label:
                text: 'Piblaster'
                size_hint: 1, 1

        MusicList:
            size_hint: 1, 0.9
            id: ml
